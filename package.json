{
  "name": "react-ui-pip",
  "version": "1.0.1",
  "description": "Production-ready React Picture-in-Picture component for UI elements (not video). Draggable, SSR-safe, portal-based.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "npm run build",
    "test": "echo \"Tests coming soon\" && exit 0"
  },
  "keywords": [
    "react",
    "nextjs",
    "picture-in-picture",
    "pip",
    "portal",
    "draggable",
    "ui-pip",
    "ssr",
    "typescript"
  ],
  "author": "Harpinder Singh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/harpinderdev/react-ui-pip.git"
  },
  "bugs": {
    "url": "https://github.com/harpinderdev/react-ui-pip/issues"
  },
  "homepage": "https://github.com/harpinderdev/react-ui-pip#readme",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
